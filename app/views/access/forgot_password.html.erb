
<h1>Forgot password?</h1>

<div class="row">
  <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    <%= form_tag '/send_reset', :method=>'post' do %>

      <%= label_tag :username %>
      <%= text_field_tag :username %>

      <%= submit_tag "Reset", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
